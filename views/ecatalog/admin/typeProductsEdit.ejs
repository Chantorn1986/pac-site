<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>PAC APP - <%= title %>
  </title>

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">
  <!-- Topbar -->
    <div id="wrapper">

      <%- include('../../partials/sidebarEcatalog'); %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <%- include('../../partials/topbarEcatalog'); %>

            <!-- Begin Page Content -->
            <div class="container-fluid mt-4 mb-4">
              <div class="card o-hidden border-0 shadow-lg ">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary align-content-center">E-Catalog - <%= title %>
                  </h6>
                </div>
                <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                    <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
                    <div class="col-lg-12">
                      <div class="p-4">
                        <form class="user" action="/ecatalog/typeProducts/Edit/<%= typeProducts.id %>" enctype="multipart/form-data" method="post">
                          <div class="form-group row">
                            <div class="col-sm-4 mb-3 mb-sm-0">
                              <label for="typeProductsNoE" class="form-label">Brands No.</label>
                              <input type="text" class="form-control" name="typeProductsNoE" value="<%= typeProducts.no %>">
                            </div>
                            <div class="col-sm-4 mb-3 mb-sm-0">
                              <label for="typeProductsCodeE" class="form-label">Brands Code</label>
                              <input type="text" class="form-control" name="typeProductsCodeE" value="<%= typeProducts.code %>" required>
                            </div>
                            <div class="col-sm-4 mb-3 mb-sm-0">
                              <div class="col-sm-12">
                              <% if (typeProducts.img) { %>
                                <img class="img mb-1" src="/uploads/typeProducts/<%= typeProducts.img %>"  width="100"/>
                                <% } else { %>
                                  <img class="img mb-1" src="/img/NoPic.svg"  width="100"/>
                                  <% } %>
                                <label for="file" class="form-label">Image</label>
                                <input type="file" name="file" class="form-control-file">
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="typeProductsCreatedAtE" class="form-label">Created at</label>
                              <input type="text" class="form-control" name="typeProductsCreatedAtE" value="<%= coverDate.createdAt %>"
                                readonly>
                            </div>
                            <div class="col-sm-6">
                              <label for="typeProductsUpdatedAtE" class="form-label">Updated at</label>
                              <input type="text" class="form-control" name="typeProductsUpdatedAtE" value="<%= coverDate.timestamp %>"
                                readonly>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="typeProductsNameTHE" class="form-label">Brands name thai</label>
                              <input type="text" class="form-control" name="typeProductsNameTHE" value="<%= typeProducts.nameTH %>" required>
                            </div>
                            <div class="col-sm-6">
                              <label for="typeProductsNameENE" class="form-label">Brands name english</label>
                              <input type="text" class="form-control" name="typeProductsNameENE" value="<%= typeProducts.nameEN %>" required>
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="shortKeywordE" class="form-label">Short Keyword</label>
                            <input type="text" class="form-control" name="shortKeywordE" value="<%= typeProducts.shortKeyword %>">
                          </div>
                          <div class="form-group">
                            <label for="keywordE" class="form-label">Keyword</label>
                            <input type="text" class="form-control" name="keywordE" value="<%= typeProducts.keyword %>">
                          </div>
                          <br>
                          <button type="submit" class="btn btn-success btn-block">
                            <i class="fas fa-save fa-fw"></i>
                            <span class="text">Save</span></button>

                        </form>
                        <hr>
                        <div class="text-center">
                          <a class="small" href="/ecatalog/typeProducts/">Back to ...</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
            </div>
            <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->
        <!-- Footer -->
        <%- include('../../partials/footerEcatalog'); %>
          <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/js/demo/datatables-demo.js"></script>

</body>

</html>