<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>PAC APP - <%= title %>
  </title>

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('../partials/sidebar'); %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
              <div class="card o-hidden border-0 shadow-lg ">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-calendar fa-fw"></i>Leave PAC - <%= title %> - (<%= resultsLeaveDoc.emCode %>) <%=
                          resultsLeaveDoc.emNameTH %>
                  </h6>
                </div>
                <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                    <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
                    <div class="col-lg-12">
                      <div class="p-5">
                        <form class="user" action="/leave/leaveDoc/Edit/<%= resultsLeaveDoc.id %>" method="POST"
                          enctype="multipart/form-data">
                          <div class="form-group row">
                            <div class="col-sm-4">
                              <label for="leaveDocumentE" class="form-label">เอกสารใบลา</label>
                              <input type="text" class="form-control" name="leaveDocumentE" id="leaveDocumentE"
                                value="<%= resultsLeaveDoc.doc %>" readonly>
                            </div>
                            <div class="col-sm-4">
                              <label for="leaveDocTypeIDE" class="form-label">ประเภทการลา</label>
                              <select name="leaveDocTypeIDE" class="form-control form-select"
                                aria-label="Default select example" required>
                                <option value="<%= resultsLeaveDoc.docTypeID %>">
                                  <%= resultsLeaveDoc.typeNameTH %>
                                </option>
                                <option value="">--- เลือกประเภทการลา ---</option>
                                <% resultsType.forEach(resultsType=> { %>
                                  <option value="<%= resultsType.id %>">
                                    <%= resultsType.nameTH %>
                                  </option>
                                  <% }) %>
                              </select>
                            </div>
                            <div class="col-sm-4">
                              <label for="leaveDocDaysE" class="form-label">จำนวนวันลา</label>
                              <input type="text" class="form-control text-right" name="leaveDocDaysE" id="leaveDocDaysE"
                                value="<%= resultsLeaveDoc.leaveDays %>" readonly>
                            </div>
                          </div>

                          <div class="form-group row">
                            <div class="col-sm-4">
                              <label for="leaveDocStartDateE" class="form-label">วันที่เริ่มลา</label>
                              <input type="date" class="form-control" name="leaveDocStartDateE" id="leaveDocStartDateE"
                                value="<%= coverDate.startDate %>" onchange="cal()" required>
                            </div>
                            <div class="col-sm-4">
                              <label for="leaveDocEndDateE" class="form-label">วันที่สิ้นสุด</label>
                              <input type="date" class="form-control" name="leaveDocEndDateE" id="leaveDocEndDateE"
                                value="<%= coverDate.endDate %>" onchange="cal()" required>
                            </div>
                            <div class="col-sm-4">
                              <label for="leaveDocHatfDateE"
                                class="form-label">ลาครึ่งวัน</label><br>&nbsp;&nbsp;&nbsp;&nbsp;
                              <% if(resultsLeaveDoc.hatfDate==='เช้า' ){%>
                                <input type="radio" class="radio" id="leaveDocHatfDateE" name="leaveDocHatfDateE"
                                  value="เช้า" checked="true">
                                <% } else { %>
                                  <input type="radio" class="radio" id="leaveDocHatfDateE" name="leaveDocHatfDateE"
                                    value="เช้า">
                                  <% } %>
                                    <label for="leaveDocHatfDateE">ช่วงเช้า </label>&nbsp;&nbsp;&nbsp;&nbsp;

                                    <% if(resultsLeaveDoc.hatfDate==='บ่าย' ){%>
                                      <input type="radio" class="radio" id="leaveDocHatfDateE" name="leaveDocHatfDateE"
                                        value="บ่าย" checked="true">
                                      <% } else { %>
                                        <input type="radio" class="radio" id="leaveDocHatfDateE"
                                          name="leaveDocHatfDateE" value="บ่าย">
                                        <% } %>
                                          <label for="leaveDocHatfDateE">ช่วงบ่าย</label>&nbsp;&nbsp;&nbsp;&nbsp;

                                          <% if(resultsLeaveDoc.hatfDate==='ไม่มี' ){%>
                                            <input type="radio" class="radio" id="leaveDocHatfDateE"
                                              name="leaveDocHatfDateE" value="ไม่มี" checked="true">
                                            <% } else { %>
                                              <input type="radio" class="radio" id="leaveDocHatfDateE"
                                                name="leaveDocHatfDateE" value="ไม่มี">
                                              <% } %>
                                                <label for="leaveDocHatfDateE">ไม่ลาครึ่งวัน </label>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-8">
                              <label for="leaveDocRemarkE" class="form-label">สาเหตุการลา</label>
                              <input type="text" class="form-control" name="leaveDocRemarkE"
                                value="<%= resultsLeaveDoc.remark %>" required>
                            </div>
                            <div class="col-sm-4">
                              <label for="leaveDocContactE" class="form-label">รายละเอียดการติดต่อ</label>
                              <input type="text" class="form-control" name="leaveDocContactE"
                                value="<%= resultsLeaveDoc.contact %>" required>
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="imageE" class="form-label">อัพโหลด</label>
                            <a href="/uploads/<%= resultsLeaveDoc.file %>" target="_blank"><img
                                src="/uploads/<%= resultsLeaveDoc.file %>" width="50" /></a>
                            <input type="file" name="imageE" class="form-control">
                          </div>
                          <br>
                          <button type="submit" class="btn btn-success btn-block">
                            <i class="fas fa-save fa-fw"></i>
                            <span class="text">Save</span></button>
                        </form>
                        <hr>
                        <div class="text-center">
                          <a class="small" href="/leave/leaveDoc/<%= resultsLeaveDoc.emID %>">Back
                            to ...</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../partials/footer'); %>
          <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>
  <script>

    function GetDays() {
      var dropdt = new Date(document.getElementById("leaveDocEndDateE").value);
      var pickdt = new Date(document.getElementById("leaveDocStartDateE").value);
      return parseInt(((dropdt - pickdt) / (24 * 3600 * 1000)) + 1);
    }
    function cal() {
      if (document.getElementById("leaveDocEndDateE")) {
        document.getElementById("leaveDocDaysE").value = GetDays();
      }
    }

    const checkradio = document.querySelectorAll('.radio');

    checkradio.forEach((radio) => {
      radio.addEventListener('change', function () {
        if (this.checked === true) {
          if (this.value === "ไม่มี") {
            document.getElementById("leaveDocDaysE").value = GetDays();
          }
          else {
            document.getElementById("leaveDocDaysE").value = GetDays() - 0.5;
          }
        }
      })
    })
  </script>

</body>

</html>