<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>PAC APP - <%= title %>
  </title>

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('../partials/sidebar'); %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
              <div class="card o-hidden border-0 shadow-lg ">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-fw fa-comment-alt"></i> Validate Q & A
                    Management - <%= title %>
                  </h6>
                </div>

                <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                    <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
                    <div class="col-lg-12">
                      <div class="p-4">


                        <h6 class="m-0 font-weight-bold text-primary mb-3"><i class="fas fa-file-signature fa-fw"></i>
                          <%= title %>
                        </h6>
                        <div class="form-group row">
                          <div class="col-sm-4">
                            <label for="libraryVAnswerDateE" class="form-label">Date
                              :</label>
                            <input type="date" class="form-control" name="libraryVAnswerDateE"
                              value="<%= results.dateE %>" readonly>
                          </div>
                          <div class="col-sm-4">
                            <label for="libraryVAnswerDocQTNE" class="form-label">Doc
                              No.:</label>
                            <input type="text" class="form-control" name="libraryVAnswerDocQTNE"
                              id="libraryVAnswerDocQTNE" value="<%= results.docQTN %>" readonly>
                          </div>
                          <div class="col-sm-4">
                            <label for="libraryVAnswerQuestionerE" class="form-label">Questioner :</label>
                            <input type="text" class="form-control" name="libraryVAnswerQuestionerE"
                              id="libraryVAnswerQuestionerE" value="<%= results.questioner %>" readonly>

                          </div>
                        </div>
                        <div class="form-group">
                          <label for="libraryVAnswerTitleE" class="form-label">Question ?
                            :</label>
                          <textarea type="textarea" rows="8" class="form-control" name="libraryVAnswerTitleE"
                            readonly><%= results.title %></textarea>
                        </div>
                        <div class="form-group row">
                          <div class="col-sm-4">
                            <label for="libraryQuestionBrands" class="form-label">Brands
                              :<br></label>
                            <% libraryBrands.forEach(libraryBrands=> { %>
                              <br>
                              <% let valueCheckedA=0 %>
                                <% if(tagArray !==null) { %>
                                  <% tagArray.forEach(tagArray=> { %>
                                    <% if(tagArray===libraryBrands.nameEN ){ %>
                                      <% valueCheckedA ++ %>
                                        <% } %>
                                          <% })} %>

                                            <% if(valueCheckedA===1 ){ %>
                                              <input type="checkbox" class="checkbox"
                                                id="vehicle<%= libraryBrands.code %>"
                                                name="vehicle<%= libraryBrands.code %>"
                                                value="<%= libraryBrands.nameEN %>" checked disabled="disabled">
                                              <%} else{ %>
                                                <input type="checkbox" class="checkbox"
                                                  id="vehicle<%= libraryBrands.code %>"
                                                  name="vehicle<%= libraryBrands.code %>"
                                                  value="<%= libraryBrands.nameEN %>" disabled="disabled">
                                                <% } %>
                                                  <label for="vehicle<%= libraryBrands.code %>">
                                                    <%= libraryBrands.nameEN %>
                                                  </label>

                                                  <% }) %>
                          </div>
                          <div class="col-sm-4">
                            <label for="libraryQuestionProductType" class="form-label">Product Type :<br></label>
                            <% libraryProductType.forEach(libraryProductType=> { %>
                              <br>
                              <% let valueCheckedA=0 %>
                                <% if(tagArray !==null ){ %>
                                  <% tagArray.forEach(tagArray=> { %>
                                    <% if(tagArray===libraryProductType.nameEN ){ %>
                                      <% valueCheckedA ++ %>
                                        <% } %>
                                          <% })} %>

                                            <% if(valueCheckedA===1 ){ %>
                                              <input type="checkbox" class="checkbox"
                                                id="vehicle<%= libraryProductType.code %>"
                                                name="vehicle<%= libraryProductType.code %>"
                                                value="<%= libraryProductType.nameEN %>" checked disabled="disabled">
                                              <%} else{%>
                                                <input type="checkbox" class="checkbox"
                                                  id="vehicle<%= libraryProductType.code %>"
                                                  name="vehicle<%= libraryProductType.code %>"
                                                  value="<%= libraryProductType.nameEN %>" disabled="disabled">
                                                <% } %>

                                                  <label for="vehicle<%= libraryProductType.code %>">
                                                    <%= libraryProductType.nameEN %>
                                                  </label>
                                                  <% }) %>
                          </div>
                          <div class="col-sm-4">
                            <label for="libraryQuestionIndustryType" class="form-label">Industry Type :<br></label>
                            <% libraryIndustryType.forEach(libraryIndustryType=> { %>
                              <br>
                              <% let valueCheckedA=0 %>
                                <% if(tagArray !==null){ %>
                                  <% tagArray.forEach(tagArray=> { %>
                                    <% if(tagArray===libraryIndustryType.nameEN ){ %>
                                      <% valueCheckedA ++ %>
                                        <% } %>
                                          <% })} %>

                                            <% if(valueCheckedA===1 ){ %>
                                              <input type="checkbox" class="checkbox"
                                                id="vehicle<%= libraryIndustryType.code %>"
                                                name="vehicle<%= libraryIndustryType.code %>"
                                                value="<%= libraryIndustryType.nameEN %>" checked disabled="disabled">
                                              <% } else{ %>
                                                <input type="checkbox" class="checkbox"
                                                  id="vehicle<%= libraryIndustryType.code %>"
                                                  name="vehicle<%= libraryIndustryType.code %>"
                                                  value="<%= libraryIndustryType.nameEN %>" disabled="disabled">
                                                <% } %>

                                                  <label for="vehicle<%= libraryIndustryType.code %>">
                                                    <%= libraryIndustryType.nameEN %>
                                                  </label>
                                                  <% }) %>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="tagValueVAE" class="form-label">Tag :</label>
                          <textarea type="textarea" rows="2" class="form-control tagValueVAE" name="tagValueVAE"
                            readonly><%= results.tagContent %></textarea>
                        </div>
                        <hr class="sidebar-divider">
                        <h6 class="m-0 font-weight-bold text-primary mb-3"><i class="fas fa-user-edit fa-fw"></i>
                          Answerer</h6>
                        <div class="form-group row">

                          <div class="col-sm-6">
                            <label for="libraryVAnswerAnswererE" class="form-label">Answerer
                              :</label>
                            <input type="text" class="form-control" name="libraryVAnswerAnswererE"
                              value="<%= results.answerer %>" readonly>

                          </div>
                          <div class="col-sm-6">
                            <label for="libraryVAnswerAnswerDate" class="form-label">Answer
                              Date :</label>
                            <% if(results.answerDate) {%>
                              <input type="datetime" class="form-control" name="libraryVAnswerAnswerDateE"
                                value="<%= results.answerDateF %>" readonly>
                              <%}else{%>
                                <input type="datetime" class="form-control" name="libraryVAnswerAnswerDateE"
                                  value="<%= timestampresults.answerDateF %>" readonly>
                                <%}%>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="libraryVAnswerAnswerE" class="form-label">Answer
                            :</label>
                          <textarea type="textarea" rows="13" class="form-control" name="libraryVAnswerAnswerE"
                            readonly><%= results.content %></textarea>
                        </div>
                        <hr class="sidebar-divider">
                        <h6 class="m-0 font-weight-bold text-primary mb-3"><i class="fas fa-user-check fa-fw"></i>
                          Validator</h6>
                        <div class="form-group row">
                          <div class="col-sm-6">
                            <label for="libraryVAnswerValidatorE" class="form-label">Validator :</label>
                            <input type="text" class="form-control" name="libraryVAnswerValidatorE"
                              value="<%= results.validator %>" readonly>
                          </div>

                          <div class="col-sm-6">
                            <label for="libraryVAnswerValidateDate" class="form-label">Validate Date :</label>
                            <% if( results.validateDate){%>
                              <input type="datetime" class="form-control" name="libraryVAnswerValidateDateE"
                                value="<%= results.validateDateE %>" readonly>
                              <% }else{%>
                                <input type="datetime" class="form-control" name="libraryVAnswerValidateDateE"
                                  value="<%= timestamp %>" readonly>
                                <% }%>
                          </div>

                        </div>

                        <div class="form-group">
                          <label for="libraryVAnswerSummaryE" class="form-label">Summary
                            :</label>
                          <textarea type="textarea" rows="5" class="form-control" name="libraryVAnswerSummaryE"
                            readonly><%= results.summaryContent %></textarea>
                        </div>

                        <div class="form-group">
                          <label for="libraryVAnswerKeywordE" class="form-label">Keyword
                            :</label>
                          <textarea type="textarea" rows="15" class="form-control" name="libraryVAnswerKeywordE"
                            readonly><%= results.keyword %></textarea>
                        </div>
                        <div class="form-group row">
                          <div class="col-sm-6">
                            <label for="libraryVAnswerAddPACE"> <i class="fas fa-fw fa-book"></i> Add to Library PAC
                            </label>

                            <% if( results.addPAC==='true' ){%>
                              <input type="text" class="form-control" name="libraryVAnswerValidatorE"
                                value="Add to Library PAC" readonly>

                              <%}else{%>
                                <input type="text" class="form-control" name="libraryVAnswerValidatorE"
                                  value="Do not add to Library PAC" readonly>

                                <%}%>

                          </div>
                          <div class="col-sm-6">
                            <label for="libraryVAnswerDocLBLE" class="form-label">Doc LBL
                              No.:</label>
                            <input type="text" class="form-control" name="libraryVAnswerDocLBLE"
                              id="libraryVAnswerDocLBLE" value="<%= results.docLBL %>" readonly>
                          </div>
                        </div>

                        <hr>
                        <div class="text-center">
                          <a class="small" href="/library/validateAnswer">Back to ...</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../partials/footer'); %>
          <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>
  <script>
    const value = document.querySelector('.tagValueVAE');
    let listArray = [];


    const checkboxes = document.querySelectorAll('.checkbox');
    if (value.value) {
      listArray = value.value.split(";");
    }

    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener('click', function () {
        if (this.checked === true) {
          listArray.push(this.value);
          value.textContent = listArray.join(';')
        } else {
          listArray = listArray.filter((e) => e !== this.value)
          value.textContent = listArray.join(';')
        }
      })
    })


  </script>
</body>

</html>