<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>PAC APP - <%= title %>
  </title>

  <!-- Custom fonts for this template -->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('../partials/sidebar'); %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
              <div class="card o-hidden border-0 shadow-lg ">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-address-card fa-fw"></i> Employee
                    Management - <%= title %>
                  </h6>
                </div>
                <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                    <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
                    <div class="col-lg-12">
                      <div class="p-4">
                        <form class="user" action="/employee/Edit/<%= employeeFull.id %>" method="POST"
                          enctype="multipart/form-data">
                          <div class="form-group row">
                            <div class="col-sm-9">
                              <div class="form-group row">
                                <div class="col-sm-4">
                                  <label for="employeeCodeE" class="form-label">Code</label>
                                  <input type="text" class="form-control" name="employeeCodeE"
                                    value="<%= employeeFull.code %>" required>
                                </div>
                                <div class="col-sm-4">
                                  <label for="serialNumberE" class="form-label">Serial Number</label>
                                  <input type="text" class="form-control" name="serialNumberE"
                                    value="<%= employeeFull.serialNumber %>" required>
                                </div>
                                <div class="col-sm-4">
                                  <label for="internalTelephoneE" class="form-label">Internal Telephone</label>
                                  <input type="text" class="form-control" name="internalTelephoneE"
                                    value="<%= employeeFull.InternalTelephone %>">
                                </div>
                              </div>
                              <div class="form-group row">
                                <div class="col-sm-4">
                                  <label for="nicknameE" class="form-label">Nickname</label>
                                  <input type="text" class="form-control" name="nicknameE"
                                    value="<%= employeeFull.nickname %>">
                                </div>
                                <div class="col-sm-4">
                                  <label for="mobileE" class="form-label">Mobile</label>
                                  <input type="text" class="form-control" name="mobileE"
                                    value="<%= employeeFull.mobile %>">
                                </div>
                                <div class="col-sm-4">
                                  <label for="userLoginE" class="form-label">Email Login</label>
                                  <select name="userLoginE" class="form-control form-select"
                                    aria-label="Default select example">
                                    <option value="<%= employeeFull.userID %>">
                                      <%= employeeFull.email %>
                                    </option>
                                    <% users.forEach(users=> { %>
                                      <option value="<%= users.id %>">
                                        <%= users.email %>
                                      </option>
                                      <% }) %>
                                  </select>
                                </div>
                              </div>
                            </div>
                            <div class="col-sm-3">
                              <div class="col-sm-12">
                                <label for="imageE" class="form-label">Image</label>
                                <% if (employeeFull.image) { %>
                                  <img src="/uploads/<%= employeeFull.image %>" height="119" />
                                  <input type="hidden" name="oldImage" value="<%= employeeFull.image %>">
                                  <% } %>
                                    <input type="file" name="imageE" class="form-control">
                              </div>
                            </div>


                          </div>
                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="nameTHE" class="form-label">Full name thai</label>
                              <input type="text" class="form-control" name="nameTHE" value="<%= employeeFull.nameTH %>"
                                required>
                            </div>
                            <div class="col-sm-6">
                              <label for="nameENE" class="form-label">Full name english</label>
                              <input type="text" class="form-control" name="nameENE" value="<%= employeeFull.nameEN %>"
                                required>
                            </div>

                          </div>

                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="departmentIDE" class="form-label">Department</label>
                              <select name="departmentIDE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.departmentID %>">
                                  <%= employeeFull.depEN %>
                                </option>
                                <% departments.forEach(departments=> { %>
                                  <option value="<%= departments.id %>">
                                    <%= departments.nameEN %>
                                  </option>
                                  <% }) %>
                              </select>
                            </div>
                            <div class="col-sm-6">
                              <label for="positionIDE" class="form-label">Position</label>
                              <select name="positionIDE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.positionID %>">
                                  <%= employeeFull.posEN %>
                                </option>
                                <% positions.forEach(positions=> { %>
                                  <option value="<%= positions.id %>">
                                    <%= positions.nameEN %>
                                  </option>
                                  <% }) %>
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="workLevelIDE" class="form-label">Work Level</label>
                              <select name="workLevelIDE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.workLevelID %>">
                                  <%= employeeFull.wleEN %>
                                </option>
                                <% workLevel.forEach(workLevel=> { %>
                                  <option value="<%= workLevel.id %>">
                                    <%= workLevel.nameEN %>
                                  </option>
                                  <% }) %>
                              </select>
                            </div>
                            <div class="col-sm-6">
                              <label for="employmentTypeE" class="form-label">Employment Type</label>
                              <select name="employmentTypeE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.employmentType %>">
                                  <%= employeeFull.employmentType %>
                                </option>
                                <option value="Casual">Casual</option>
                                <option value="Contract">Contract</option>
                                <option value="Full-time">Full-time</option>
                                <option value="Part-time">Part-time</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-3">
                              <label for="startDateE" class="form-label">Start Date</label>
                              <% if (coverDate.startDate) { %>
                                <input type="date" class="form-control" name="startDateE"
                                  value="<%= coverDate.startDate %>">
                                <% } else { %>
                                  <input type="date" class="form-control" name="startDateE">
                                  <% } %>
                            </div>
                            <div class="col-sm-2">
                              <label for="resignationE" class="form-label">Status Employee</label><br>
                              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" class="checkbox"
                                name="resignationE" value="1">
                              <label for="resignationE">
                                &nbsp;&nbsp; ลาออก
                              </label>
                            </div>
                            <div class="col-sm-3">
                              <label for="endDateE" class="form-label">End Date</label>
                              <% if (coverDate.endDate) { %>
                                <input type="date" class="form-control" name="endDateE"
                                  value="<%= coverDate.endDate %>">
                                <% } else { %>
                                  <input type="date" class="form-control" name="endDateE">
                                  <% } %>
                            </div>
                            <div class="col-sm-4">
                              <label for="ReasonForLeavingE" class="form-label">Reason for leaving</label>
                              <input type="text" class="form-control" name="ReasonForLeavingE"
                                value="<%= employeeFull.reasonForLeaving %>">
                            </div>
                          </div>

                          <hr class="sidebar-divider">
                          <h6 class="m-0 font-weight-bold text-primary mb-3"><i class="fas fa-address-book fa-fw"></i>
                            Personal information</h6>
                          <div class="form-group row">
                            <div class="col-sm-3">
                              <label for="dateOfBirthE" class="form-label">Date of birth</label>
                              <% if (coverDate.dateOfBirth) { %>
                                <input type="date" class="form-control" name="dateOfBirthE"
                                  value="<%= coverDate.dateOfBirth %>">
                                <% } else { %>
                                  <input type="date" class="form-control" name="dateOfBirthE">
                                  <% } %>
                            </div>
                            <div class="col-sm-3">
                              <label for="nameTitleE" class="form-label">Name Title</label>
                              <select name="nameTitleE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.nameTitle %>">
                                  <%= employeeFull.nameTitle %>
                                </option>
                                <option value="Miss">Miss</option>
                                <option value="Mrs.">Mrs.</option>
                                <option value="MR.">MR.</option>
                              </select>
                            </div>
                            <div class="col-sm-3">
                              <label for="genderE" class="form-label">Gender</label>
                              <select name="genderE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.gender %>">
                                  <%= employeeFull.gender %>
                                </option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Not specified">Not specified</option>
                              </select>
                            </div>
                            <div class="col-sm-3">
                              <label for="bloodGroupE" class="form-label">Blood Group</label>
                              <select name="bloodGroupE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.bloodGroup %>">
                                  <%= employeeFull.bloodGroup %>
                                </option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="AB">AB</option>
                                <option value="O">O</option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-3">
                              <label for="maritalStatusE" class="form-label">Marital Status</label>
                              <select name="maritalStatusE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.maritalStatus %>">
                                  <%= employeeFull.maritalStatus %>
                                </option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                                <option value="Divorced">Divorced</option>
                                <option value="Widowed">Widowed</option>
                              </select>
                            </div>
                            <div class="col-sm-3">
                              <label for="religionE" class="form-label">Religion</label>
                              <select name="religionE" class="form-control form-select"
                                aria-label="Default select example">
                                <option value="<%= employeeFull.religion %>">
                                  <%= employeeFull.religion %>
                                </option>
                                <option value="Buddhism">Buddhism</option>
                                <option value="Islam">Islam</option>
                                <option value="Christianity">Christianity</option>
                                <option value="Brahmin-Hinduism">Brahmin-Hinduism</option>
                                <option value="Sikhism">Sikhism</option>
                                <option value="Not specified">Not specified</option>
                              </select>
                            </div>
                            <div class="col-sm-3">
                              <label for="nationalityE" class="form-label">Nationality</label>
                              <input type="text" class="form-control" name="nationalityE"
                                value="<%= employeeFull.nationality %>">
                            </div>
                            <div class="col-sm-3">
                              <label for="ethnicityE" class="form-label">Ethnicity</label>
                              <input type="text" class="form-control" name="ethnicityE"
                                value="<%= employeeFull.ethnicity %>">
                            </div>
                          </div>

                          <div class="form-group row">
                            <div class="col-sm-6">
                              <label for="taxIDE" class="form-label">Tax ID</label>
                              <input type="text" class="form-control" name="taxIDE" value="<%= employeeFull.taxID %>">
                            </div>
                            <div class="col-sm-3">
                              <label for="bankE" class="form-label">Bank</label>
                              <select name="bankE" class="form-control form-select" aria-label="Default select example">
                                <option value="<%= employeeFull.bank %>">
                                  <%= employeeFull.bank %>
                                </option>
                                <option value="BANGKOK BANK">BANGKOK BANK</option>
                                <option value="BANK OF AYUDHYA">BANK OF AYUDHYA</option>
                                <option value="KASIKORNBANK">KASIKORNBANK</option>
                                <option value="KRUNG THAI BANK">KRUNG THAI BANK</option>
                                <option value="SIAM COMMERCIAL BANK">SIAM COMMERCIAL BANK</option>
                                <option value="TMB BANK">TMB BANK</option>
                                <option value="GOVERNMENT SAVINGS BANK">GOVERNMENT SAVINGS BANK</option>
                              </select>
                            </div>
                            <div class="col-sm-3">
                              <label for="bankNumberE" class="form-label">Bank Number</label>
                              <input type="text" class="form-control" name="bankNumberE"
                                value="<%= employeeFull.bankNumber %>">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="addressE" class="form-label">Address</label>
                            <input type="text" class="form-control" name="addressE" value="<%= employeeFull.address %>">
                          </div>
                          <div class="form-group row">
                            <div class="col-sm-3">
                              <label for="subdistrictE" class="form-label">Subdistrict</label>
                              <input type="text" class="form-control" name="subdistrictE"
                                value="<%= employeeFull.subdistrict %>">
                            </div>
                            <div class="col-sm-3">
                              <label for="districtE" class="form-label">District</label>
                              <input type="text" class="form-control" name="districtE"
                                value="<%= employeeFull.district %>">
                            </div>
                            <div class="col-sm-3">
                              <label for="provinceE" class="form-label">Province</label>
                              <input type="text" class="form-control" name="provinceE"
                                value="<%= employeeFull.province %>">
                            </div>
                            <div class="col-sm-3">
                              <label for="postcodeE" class="form-label">Postcode</label>
                              <input type="text" class="form-control" name="postcodeE"
                                value="<%= employeeFull.postcode %>">
                            </div>

                          </div>
                          <hr class="sidebar-divider">

                          <button type="submit" class="btn btn-success btn-block">
                            <i class="fas fa-save fa-fw"></i>
                            <span class="text">Save</span></button>

                        </form>
                        <hr>
                        <div class="text-center">
                          <a class="small" href="/employee/Sub/<%= employeeFull.id %>">Back to ...</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!--<div class="col-lg-2 d-none d-lg-block"></div>-->
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../partials/footer'); %>
          <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>

</body>

</html>