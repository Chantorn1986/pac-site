<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%- include('partials/nav'); %>
    <div class="ms-4 me-4">
      <div class="row mt-3">
        <div class="col-md-9">
          <h1>Welcome to home page</h1>
          <div>
            <% if (typeof user !=='undefined' ) { %>
              <p>Hello, <%= user.name %> ,Email : <%= user.email %>, <%= user.role %>
              </p>
              <% } %>
          </div>
        </div>
        <div class="col-md-3">
          <a href="/create" class="btn btn-warning">Creater</a>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-sm table-bordered">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Image</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(product=> { %>
              <tr>
                <td>
                  <%= product.id %>
                </td>
                <td>
                  <%= product.name %>
                </td>
                <td>
                  <%= product.description %>
                </td>
                <td>
                  <% if (product.image) { %>
                    <img src="/uploads/<%= product.image %>" width="100" />
                    <% } else { %>
                      <p>No image</p>
                      <% } %>
                </td>
                <td>
                  <a href="/edit/<%= product.id %>" class="btn btn-success">Edit</a>
                  <a href="/delete/<%= product.id %>" class="btn btn-danger"
                    onclick="return confirm('Are you sure?');">Delete</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>